{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "indexers/**/*.ts",
    "lib/**/*.ts",
    "providers/**/*.ts",
    "abi/**/*.ts",
    "./.apibara/types"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src"
  ]
}
