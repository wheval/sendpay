{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "indexers/**/*.ts",
    "lib/**/*.ts",
    "providers/**/*.ts",
    "abi/**/*.ts",
    "./.apibara/types"
  ],
  "exclude": [
    "indexers/**/*",
    "node_modules",
    "dist"
  ]
}
